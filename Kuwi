// El ciclo perfecto de camping
while(camping.is_active()) {

    // Un momento 'pintinchis', pero también 'pitutis'...
    if (is_pintinchis && is_pitutis) {
        console.log("Alarma sonando: First Day of My Life");
    }

    // Si el estado es 'kiwi', el plan es perfecto.
    if (Kiwi.is_kiwi() === "kiwi") {
        console.log("Validación: ¡el ciclo funciona perfectamente!");
        selfie.take();
    }

    // Si se activa la alarma de 'calcetines'...
    if (socks.put_on(Kiwi)) {
        console.log("Alerta! Estado: ¿nos vamos?");
        adventure.start();
    }

    // Si el estado es 'malita', el plan cambia.
    if (Kiwi.is_sick()) {
        adventure.pause();
        support.activate();
        console.log("Prioridad: recuperar a la paciente.");
        console.log("¡Casi no salimos de Susin!");
    }

    // ... (el resto del código sigue)
}
